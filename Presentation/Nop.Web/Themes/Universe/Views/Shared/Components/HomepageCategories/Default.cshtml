@if (Model.Count > 0)
{
    <!--//==collection-section Start==//-->
    <div class="collection-section pad-top-bottom80">
        <div class="container">
            <div class="row">
               @foreach (var item in Model)
                {
                    <div class="col-md-4 col-sm-4 col-xs-12 pad-bottom10">
                        <figure class="itg-hover-section">
                            <img src="@(item.PictureModel.ImageUrl)" alt="">
                            <figcaption class="categorie-boxs">
                                <h3><a href="@Url.RouteUrl("Category", new { SeName = item.SeName })">@item.Name</a></h3>
                            </figcaption>
                        </figure>
                    </div>
                }
            </div>
        </div>
    </div>
