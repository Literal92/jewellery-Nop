@model IList<CategoryModel>
@if (Model.Count > 0)
{
    <div class="category-grid home-page-category-grid">
        <div class="item-grid">
            @foreach (var item in Model)
            {
                <div class="item-box">
                    <div class="category-item">
                        <a href="@Url.RouteUrl("Category", new { SeName = item.SeName })" title="@item.PictureModel.Title">
                            <div class="picture" style="background:url('@(item.PictureModel.ImageUrl)') center center no-repeat ;background-size:cover"
                                 alt="@item.PictureModel.AlternateText" src="" title="@item.PictureModel.Title">
                            </div>
                            <h2 class="title">
                                @item.Name
                            </h2>
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
}